<%= form_for @pension, class: 'form-horizontal' do |f| %>
	<div class="form-group">
		<%= f.label :nome, class: 'col-sm-2 label-form' %>
		<div class="col-sm-6">
			<%= f.text_field :nome, class: 'form-control' %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-3">
			<%= f.submit "Guardar", class: 'btn btn-success' %>
		</div>
		<div class="col-sm-3">
			<%= link_to "Cancelar", pensions_path, class: 'btn' %>
		</div>
	</div>
<% end %>