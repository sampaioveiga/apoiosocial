<%= form_for ([@patient, @episode]), html: { class: 'form-horizontal' } do |f| %>
	<div class="form-group">
		<%= f.label :data, class: 'col-md-3 control-label' %>
		<div class="col-md-3">
			<%= f.text_field :data, placeholder: 'aaaa-mm-dd', class: 'form-control' %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :primeiro_contacto, class: 'col-md-3 control-label' %>
		<div class="col-md-9">
			<%= f.text_area :primeiro_contacto, class: 'form-control' %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :orientacao, class: 'col-md-3 control-label' %>
		<div class="col-md-9">
			<%= f.text_area :orientacao, class: 'form-control' %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :observacoes, class: 'col-md-3 control-label' %>
		<div class="col-md-9">
			<%= f.text_area :observacoes, class: 'form-control' %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-md-offset-3 col-md-3">
			<%= f.submit "Guardar", class: 'btn btn-success' %>
		</div>
		<div class="col-md-3">
			<%= link_to "Cancelar", @patient, class: 'btn btn-link' %>
		</div>
	</div>
<% end %>

<script type="text/javascript">
	$(document).ready(function(){
		$('input#episode_data').datepicker({
			format: "yyyy-mm-dd",
			todayHighlight: true,
			todayBtn: "linked",
			autoclose: true
		});
	});
</script>