<%= form_for @patient, html: { class: 'form-horizontal' } do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	
	<legend>Identificação</legend>
	<div class="row">
		<div class="col-md-6">
			<div class="form-group">
				<%= f.label :nome, class: 'col-md-3 control-label' %>
				<div class="col-md-9">
					<%= f.text_field :nome, class: 'form-control' %>
				</div>
			</div>
			<div class="form-group">
				<%= f.label :data_de_nascimento, "D. nasc.", class: 'col-md-3 control-label' %>
				<div class="col-md-3">
					<%= f.text_field :data_de_nascimento, placeholder: 'aaaa-mm-dd', class: 'form-control' %>
				</div>
				<%= f.label :genero, "Género", class: 'col-md-3 control-label' %>
				<div class="col-md-3">
					<%= f.select(:genero, options_for_select(['Homem', 'Mulher'], @patient.genero), { include_blank: 'Outro' }, {class: 'form-control'}) %>
				</div>
			</div>
			<div class="form-group">
				<%= f.label :cartao_de_cidadao, "CC", class: 'col-md-3 control-label' %>
				<div class="col-md-3">
					<%= f.text_field :cartao_de_cidadao, class: 'form-control' %>
				</div>
				<%= f.label :numero_identificacao_fiscal, "NIF", class: 'col-md-3 control-label' %>
				<div class="col-md-3">
					<%= f.text_field :numero_identificacao_fiscal, class: 'form-control' %>
				</div>
			</div>
			<div class="form-group">
				<%= f.label :rnu, "RNU/SNS", class: 'col-md-3 control-label' %>
				<div class="col-md-3">
					<%= f.text_field :rnu, class: 'form-control' %>
				</div>
			</div>
			<div class="form-group">
				<%= f.label :subsystem_id, "Subsistema", class: 'col-md-3 control-label' %>
				<div class="col-md-3">
					<%= f.collection_select(:subsystem_id, Subsystem.order('nome'), :id, :nome, { include_blank: true }, { class: 'form-control'}) %>
				</div>
				<div class="col-md-3">
					<%= f.text_field :subsystem_number, placeholder: 'Número', class: 'form-control' %>
				</div>
			</div>
		</div>
		<div class="col-md-6">
			<div class="form-group">
				<%= f.label :telefone, class: 'col-md-3 control-label' %>
				<div class="col-md-3">
					<%= f.text_field :telefone, class: 'form-control' %>
				</div>
				<%= f.label :telemovel, class: 'col-md-3 control-label' %>
				<div class="col-md-3">
					<%= f.text_field :telemovel, class: 'form-control' %>
				</div>
			</div>
			<div class="form-group">
				<%= f.label :email, class: 'col-md-3 control-label' %>
				<div class="col-md-9">
					<%= f.text_field :email, class: 'form-control' %>
				</div>
			</div>
			<div class="form-group">
				<%= f.label :estado_civil, class: 'col-md-3 control-label' %>
				<div class="col-md-3">
					<%= f.select(:estado_civil, options_for_select(['Casado(a)', 'Solteiro(a)', 'União de Facto', 'Viuvo(a)', 'Outro'], @patient.estado_civil), { include_blank: true },  { class: 'form-control' }) %>
				</div>
				<% f.label :habilitacoes_literarios, 'Habilitações', class: 'col-md-3 control-label' %>
				<div class="col-md-3">
					<% f.select(:habilitacoes_literarios, options_for_select(['1º ciclo','2º ciclo','3º ciclo','Secundário','Superior','Técnico-profissional','Frequenta básico/secundário','Frequenta superior','Frequenta superior'], @patient.habilitacoes_literarios), { include_blank: true },  { class: 'form-control' }) %>
				</div>
			</div>
			<div class="form-group">
				<%= f.label :ocupacao, "Ocupação", class: 'col-md-3 control-label' %>
				<div class="col-md-9">
					<%= f.text_field :ocupacao, class: 'form-control' %>
				</div>
			</div>
		</div>
	</div>
	
	<!-- Contacto preferencial -->

	<div class="form-group">
		<div class="col-md-offset-3 col-md-2">
			<%= f.submit "Guardar", class: 'btn btn-success' %>
		</div>
		<div class="col-md-2">
			<%= link_to "Cancelar", @patient, class: 'btn btn-default' %>
		</div>
	</div>
<% end %>