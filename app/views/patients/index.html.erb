<% provide(:title, "Utentes") %>

<h1>Utentes</h1>
<div class="row">
	<div class="col-md-8 col-md-offset-2">
		<%= link_to "Novo utente", new_patient_path, class: 'btn btn-success' %>
		<table class="table">
			<thead>
				<tr>
					<th>Nome</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% @patients.each do |patient| %>
					<tr>
						<td><%= link_to patient.nome, patient %></td>
						<td><%= link_to "Eliminar", patient, method: :delete, data: { confirm: 'A eliminação é irreversível. Pretende continuar?' }, class: 'btn btn-danger' %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>