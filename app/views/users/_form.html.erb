<%= form_for @user do |f| %>
	<% if @user.errors.any? %>
		<div class="error_explanation">
			<h2>O formulário tem <%= pluralize(@user.errors.count, "erro") %></h2>
			<ul>
				<% for message in @user.errors.full_messages %>
					<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<%= f.label :nome %>
	<%= f.text_field :nome %>
	<%= f.label :numero_mecanografico %>
	<%= f.text_field :numero_mecanografico %>
	<%= f.label :email %>
	<%= f.text_field :email %>
	<%= f.label :password %>
	<%= f.password_field :password %>
	<%= f.label :password_confirmation, "Confirmação" %>
	<%= f.password_field :password_confirmation %>
	<%= f.submit "Registar", class: 'btn btn-success' %>
	<%= link_to 'Cancelar', login_path, class: 'btn' %>
<% end %>