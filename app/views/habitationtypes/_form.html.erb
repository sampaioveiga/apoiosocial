<%= form_for @habitationtype do |f| %>
	<% if @habitationtype.errors.any? %>
		<div class="error_explanation">
			<h2>O formulário contém <%= pluralize(@habitationtype.errors.count, "erro") %></h2>
			<ul>
				<% for message in @habitationtype.errors.full_messages %>
					<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<%= f.label :nome %>
	<%= f.text_field :nome %>

	<%= f.submit "Guardar", class: 'btn btn-success' %>
	<%= link_to "Cancelar", habitationtypes_path %>
<% end %>