<% provide(:title, "Tipos de habitação") %>

<h1>Tipos de habitação</h1>
<div class="row">
	<div class="col-md-8 col-md-offset-2">
		<%= link_to "Novo tipo de habitação", new_habitationtype_path, class: 'btn btn-info' %>
		<table class="table">
			<thead>
				<tr>
					<th>Nome</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% @habitationtypes.each do |habitationtype| %>
					<tr>
						<td><%= link_to habitationtype.nome, edit_habitationtype_path(habitationtype) %></td>
						<td><%= link_to "Eliminar", habitationtype, method: :delete, data: { confirm: "A eliminação é permanente. Tem a certeza?" }, class: 'btn btn-danger' %></td>
					<tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>