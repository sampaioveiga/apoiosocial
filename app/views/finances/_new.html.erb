<%= form_for([@patient, @patient.finances.build], html: { class: 'form-horizontal' }) do |f| %>
	<div class="form-group">
		<%= f.label :insuficiencia_economica, "Atestado?", class: 'col-md-1 control-label' %>
		<div class="col-md-1">
			<%= f.check_box :insuficiencia_economica, class: 'form-control' %>
		</div>
		<%= f.label :data_consulta_rnu, "Verificação", class: 'col-md-2 control-label' %>
		<div class="col-md-2">
			<%= f.text_field :data_consulta_rnu, value: Date.today, class: 'form-control' %>
		</div>
		<%= f.label :data_validade, class: 'col-md-2 control-label' %>
		<div class="col-md-2">
			<%= f.text_field :data_validade, placeholder: 'aaaa-mm-dd', class: 'form-control' %>
		</div>
		<div class="col-md-2">
			<%= f.submit "Inserir", class: 'btn btn-success navbar-btn' %>
		</div>
	</div>
<% end %>