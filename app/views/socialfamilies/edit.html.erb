<% provide(:title, "Editar Situação Socio Familiar #{@patient.nome}") %>

<h1>Editar Situaçõa Socio Familiar <%= @patient.nome %></h1>

<div class="row">
	<div class="col-md-offset-1 col-md-10">
		<%= form_for ([@patient, @patient.socialfamily]), html: { class: 'form-horizontal' } do |f| %>
			<div class="form-group">
				<%= f.label :companhia, class: 'col-md-3 control-label' %>
				<div class="col-md-3">
					<%= f.select(:companhia, options_for_select(['Só', 'Com família natural', 'Outra']), { include_blank: true }, { class: 'form-control' }) %>
				</div>
			</div>
			<div class="form-group">
				<%= f.label :apoio, class: 'col-md-3 control-label' %>
				<div class="col-md-3">
					<%= f.select(:apoio, options_for_select(['Familiares', 'Centro de Dia', 'Apoio Domiciliário', 'Outro']), { include_blank: true }, { class: 'form-control' }) %>
				</div>
			</div>
			<div class="form-group">
				<%= f.label :observacoes, class: 'col-md-3 control-label' %>
				<div class="col-md-9">
					<%= f.text_area :observacoes, class: 'form-control' %>
				</div>
			</div>
			<div class="form-group">
				<div class="col-md-offset-3 col-md-3">
					<%= f.submit "Guardar", class: 'btn btn-success' %>
				</div>
				<div class="sol-md-3">
					<%= link_to "Cancelar", @patient, class: 'btn btn-link' %>
				</div>
			</div>
		<% end %>
	</div>
</div>