<% provide(:title, "Editar #{@episode.patient.nome}") %>

<%= form_for([@episode.patient, @episode, @note], html: { class: 'form-horizontal' }) do |f| %>
	<div class="form-group">
		<%= f.label :data, "Data", class: 'col-md-2 control-label' %>
		<div class="col-md-3">
			<%= f.text_field :data, placeholder: 'aaaa/mm/dd', class: 'form-control' %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :nota, class: 'col-md-2 control-label' %>
		<div class="col-md-10">
			<%= f.text_area :nota, class: 'form-control' %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-md-offset-2 col-md-2">
			<%= f.submit "Guardar", class: 'btn btn-success' %>
		</div>
		<div class="col-md-2">
			<%= link_to "Cancelar", [@episode.patient, @episode], class: 'btn btn-default' %>
		</div>
	</div>
<% end %>

<script type="text/javascript">
	$(document).ready(function(){
		$('input#note_data').datepicker({
			format: "yyyy-mm-dd"
		});
	});
</script>